<link rel="stylesheet" href="/src/components/ImageUploader.css" />
<script type="module" src="/src/components/ImageUploader.js"></script>

<!-- Upload section -->

<div class="upload-container">
  <h2>Upload a cattle brand</h2>
  <form id="upload-form">
    <input type="file" id="image-input" name="image" accept="image/*" />
    <div id="preview-container" class="preview"></div>
    <div class="form-controls">
      <label for="n-results">Number of matches:</label>
      <input type="number" id="n-results" name="n-results" min="1" max="10" value="5" />
      <button type="submit">Submit</button>
    </div>
  </form>
</div>

<!-- Result section -->
<div class="results-container" id="results-container">
  <h3>Results</h3>
  <div id="results-list" class="results-grid">
    <!-- Results will be inserted here -->
  </div>
</div>

<style>
  .form-controls {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-top: 1rem;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }

  .result-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
  }

  .result-card img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  .result-info {
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }

  .similarity-score {
    color: #666;
    font-size: 0.8rem;
  }
</style>